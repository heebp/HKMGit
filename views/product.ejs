<!doctype html>
<html lang="en">
  <%-include('layouts/header');-%>


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link href="css/product.css" rel="stylesheet">
    <%-include('layouts/scripts');-%>

<body>
  <%-include('layouts/navbar');-%>

    <main class="mt-5">
        <div class="container">
            <div class="row justify-content-center">
                
                <div class="col-4">
                    <div id="carouselExampleIndicators" class="carousel carousel-dark slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        </div>
                <input class="form-control" id="board_no" name="baord_no" class="board_no" type="hidden"  value="<%= board_no %>">

                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="<%= product_data[0].image %>" class="d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%= product_data[0].iamge %>" class="d-block w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="<%= product_data[0].image %>" class="d-block w-100" alt="...">
                          </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </button>
                      </div>
                </div>

                <div class="col-6">
                    <div class="col">
                        <div class="card shadow-sm">
                
                          <div class="card-body">
                            <h4 class="card-title pb-2"><%= product_data[0].title %></h4>
                            <h6 class="card-text pt-3 pb-2 border-top"><%= product_data[0].price %> 원</h6>
                            <p class="card-title pt-3 pb-5 border-top"><%= product_data[0].content %></p>
                            <small class="text-muted">9 mins</small>
                          </div>
                        </div>
                    </div>

                    <div class="btn-group mt-3" role="group" aria-label="Basic example">
                      <form method="POST" >
                        <input type="hidden" class="form-control" id="member_id" name="member_id" placeholder=""value="<%= member_id %>">
                        <button type="submit" class="btn btn-secondary" onclick = "location.href = '/favorite/<%= member_id %>' ">찜하기</button>
                      </form>
                        <button type="button" class="btn btn-secondary">채팅</button>
                    </div>

                    <div class="card shadow-sm mt-3">
                        <div class="card-body">
                            <form>
                                <div class="row justify-content-start">
                                    <div class="col-2">
                                        <div class="avatar">
                                            <img src="https://static.nid.naver.com/images/web/user/default.png" alt="..." class="avatar-img rounded-circle" />
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="name mt-2">
                                          <h5><%= product_data[0].member_id %></h5>
                                          
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                      </div>

                </div>
            </div>

        </div>
    </main>


</body>

</html>